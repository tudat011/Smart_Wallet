<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#212343"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textView43"
        android:layout_width="410dp"
        android:layout_height="37dp"
        android:drawableLeft="@drawable/back"
        android:fontFamily="@font/kadwa"
        android:text="Nhóm"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="275dp"
        android:layout_height="39dp"
        android:backgroundTint="#212343"
        android:text="Thêm nhóm"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:icon="@drawable/plus_icon"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="148dp" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="681dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng quan" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ví" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Báo cáo thống kê" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khác" />
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãy tạo nhóm để dễ dàng phân chia số tiền với mọi người"
        android:textColor="#607746"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="104dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_big"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="217dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>